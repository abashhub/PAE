package bizz.dto;

/**
 * 
 * This interface is Used by the servlet and the persistence package to stock data and to send them
 * to the UserUCC
 *
 */
public interface UserDTO {
  /**
   * 
   * @return the ID of this UserDTO
   */
  public Long getUserID();

  /**
   * Set the parameter "userID" as the new ID
   * 
   * @param userID
   */
  public void setUserID(Long userID);

  /**
   * 
   * @return the login of this UserDTO
   */
  public String getLogin();

  /**
   * Set the parameter login as the new login
   * 
   * @param login
   */
  public void setLogin(String login);

  /**
   * 
   * @return the first name of this userDTO
   */
  public String getFirstName();

  /**
   * Set the parameter first name as the new first name
   * 
   * @param firstName
   */
  public void setFirstName(String firstName);

  /**
   * 
   * @return the last name of this UserDTO
   */
  public String getLastName();

  /**
   * Set the parameter first name as the new last name
   * 
   * @param lastName
   */
  public void setLastName(String lastName);

  /**
   * 
   * @return the eamail of this User
   */
  public String getEmail();

  /**
   * Set the current email with the new one
   * 
   * @param email
   */
  public void setEmail(String email);

  /**
   * 
   * @return true if this UserDTO is a manager
   */
  public boolean isManager();

  /**
   * This method allow to give or remove the role of manager to the User
   * 
   * @param manager
   */
  public void setManager(boolean manager);

  /**
   * 
   * @return the password
   */
  public String getPassword();

  /**
   * Set the current password with anew one
   * 
   * @param password
   */
  public void setPassword(String password);
}
