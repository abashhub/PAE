	function updateParticipation(){
		var contactId = this.id;
		var participe = $(this).parent().prev().find('input[type=radio][name=optradio]:checked').val();
		
		var d = {
				id : contactId,
				idJe : idJe,
				idCompany : idCompany,
				participe : participe,
		}
		
		var success =  function(response) {
